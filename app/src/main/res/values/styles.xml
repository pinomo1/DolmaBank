<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CustomBottomNav" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemBackground">@drawable/nav_item_background_selector</item>
    </style>

    <style name="DropShadow">
        <item name="android:shadowColor">@color/white</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
        <item name="android:shadowRadius">20</item>
    </style>

    <style name="NavInactiveText">
        <item name="android:fontFamily">@font/lato</item>
        <item name="android:textSize">11sp</item>
    </style>

    <style name="NavActiveText" parent="DropShadow">
        <item name="android:fontFamily">@font/lato</item>
        <item name="android:textSize">11sp</item>
    </style>
</resources>