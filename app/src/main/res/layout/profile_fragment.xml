<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/backgroundColor">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="128dp"
            android:layout_height="128dp"
            app:cardCornerRadius="150dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/gojo"/>
        </androidx.cardview.widget.CardView>
        <Button
            android:layout_width="150dp"
            android:layout_marginTop="10dp"
            android:layout_height="44dp"
            app:cornerRadius ="8dp"
            android:backgroundTint="@color/menuColor"
            android:layout_gravity="center"
            android:text="@string/change"
            android:gravity="center"
            android:textColor="@color/white"
            android:fontFamily="@font/lora_medium"
            android:textSize="16sp"/>
        <FrameLayout
            android:layout_marginTop="10dp"
            android:layout_width="360dp"
            android:layout_height="56dp"
            android:layout_gravity="center"
            android:background="@drawable/rounded_corner">
            <ImageView
                android:layout_marginTop="10dp"
                android:layout_marginStart="12dp"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/contact_icon"/>
            <LinearLayout
                android:layout_marginTop="8dp"
                android:layout_marginStart="64dp"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="16dp"
                    android:textSize="12sp"
                    android:text="@string/name_field"
                    android:fontFamily="@font/lora_medium"
                    android:textColor="@color/white"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    android:textSize="14sp"
                    android:background="@color/menuColor"
                    android:text="Nail Shamsudinov"
                    android:fontFamily="@font/lora_bold"
                    android:textColor="@color/white"
                    android:inputType="text"
                    android:enabled="false"/>

            </LinearLayout>
        </FrameLayout>
        <FrameLayout
            android:layout_marginTop="16dp"
            android:layout_width="360dp"
            android:layout_height="56dp"
            android:layout_gravity="center"
            android:background="@drawable/rounded_corner">
            <ImageView
                android:layout_marginTop="10dp"
                android:layout_marginStart="12dp"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/email_icon"/>
            <LinearLayout
                android:layout_marginTop="8dp"
                android:layout_marginStart="64dp"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="16dp"
                    android:textSize="12sp"
                    android:text="@string/email_field"
                    android:fontFamily="@font/lora_medium"
                    android:textColor="@color/white"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    android:textSize="14sp"
                    android:background="@color/menuColor"
                    android:text="nailandhammer@gmail.com"
                    android:fontFamily="@font/lora_bold"
                    android:textColor="@color/white"
                    android:inputType="textEmailAddress"
                    android:enabled="false"/>

            </LinearLayout>
        </FrameLayout>
        <FrameLayout
            android:layout_marginTop="16dp"
            android:layout_width="360dp"
            android:layout_height="56dp"
            android:layout_gravity="center"
            android:background="@drawable/rounded_corner">
            <ImageView
                android:layout_marginTop="10dp"
                android:layout_marginStart="12dp"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/phone_icon"/>
            <LinearLayout
                android:layout_marginTop="8dp"
                android:layout_marginStart="64dp"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="16dp"
                    android:textSize="12sp"
                    android:text="@string/phone_field"
                    android:fontFamily="@font/lora_medium"
                    android:textColor="@color/white"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    android:textSize="14sp"
                    android:background="@color/menuColor"
                    android:text="+994505000001"
                    android:fontFamily="@font/lora_bold"
                    android:textColor="@color/white"
                    android:inputType="phone"
                    android:enabled="false"/>

            </LinearLayout>
        </FrameLayout>
        <FrameLayout
            android:layout_marginTop="16dp"
            android:layout_width="360dp"
            android:layout_height="56dp"
            android:layout_gravity="center"
            android:background="@drawable/rounded_corner">
            <ImageView
                android:layout_marginTop="10dp"
                android:layout_marginStart="12dp"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/address_icon"/>
            <LinearLayout
                android:layout_marginTop="8dp"
                android:layout_marginStart="64dp"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="16dp"
                    android:textSize="12sp"
                    android:text="@string/address_field"
                    android:fontFamily="@font/lora_medium"
                    android:textColor="@color/white"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    android:textSize="14sp"
                    android:background="@color/menuColor"
                    android:text="183 Nizami St, Baku"
                    android:fontFamily="@font/lora_bold"
                    android:textColor="@color/white"
                    android:inputType="textPostalAddress"
                    android:enabled="false"/>

            </LinearLayout>
        </FrameLayout>
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="360dp"
            android:layout_height="60dp"
            android:background="@null"
            android:layout_gravity="center"
            android:layout_marginTop="12dp">

            <AutoCompleteTextView
                android:popupBackground="@color/menuColor"
                android:dropDownVerticalOffset="-10dp"
                android:id="@+id/auto_complete_txt"
                android:layout_width="match_parent"
                android:dropDownHeight="200dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/lora_medium"
                android:background="@drawable/rounded_corner"
                android:textColor="@color/white"
                android:inputType="none"
                android:text="@string/interface_language"
                />

        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>